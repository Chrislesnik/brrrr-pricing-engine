{
  "name": "brrrr-pricing-engine",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "postinstall": "cp node_modules/@grapesjs/studio-sdk/dist/style.css apps/pricing-engine/public/grapesjs-style.css 2>/dev/null || true",
    "dev": "turbo run dev",
    "dev:pricing": "turbo run dev --filter=pricing-engine",
    "dev:resources": "turbo run dev --filter=resources",
    "dev:docs": "turbo run dev --filter=docs",
    "build": "turbo run build",
    "build:pricing": "turbo run build --filter=pricing-engine",
    "start": "next start",
    "format": "turbo run format",
    "format:fix": "turbo run format:fix",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "check-types": "turbo run check-types",
    "test:e2e": "turbo run test:e2e",
    "clean": "turbo run clean && rm -rf node_modules",
    "reset": "pnpm clean && pnpm install",
    "cap:sync": "pnpm exec cap sync",
    "cap:copy": "pnpm exec cap copy",
    "ios:add": "pnpm exec cap add ios",
    "ios:open": "pnpm exec cap open ios",
    "ios:sync:dev": "pnpm exec cap sync ios",
    "ios:sync:prod": "APP_URL=https://www.pricingengine.pro CAP_SERVER_URL=$APP_URL pnpm exec cap sync ios"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@playwright/test": "^1.53.1",
    "baseline-browser-mapping": "^2.9.19",
    "prettier": "^3.4.2",
    "turbo": "^2.7.1",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@10.30.0+sha512.2b5753de015d480eeb88f5b5b61e0051f05b4301808a82ec8b840c9d2adf7748eb352c83f5c1593ca703ff1017295bc3fdd3119abb9686efc96b9fcb18200937",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@grapesjs/studio-sdk-plugins": "^1.0.33",
    "@tiptap/core": "^3.20.0",
    "@tiptap/extension-color": "^3.20.0",
    "@tiptap/extension-image": "^3.20.0",
    "@tiptap/extension-text-style": "^3.20.0",
    "@tiptap/extension-typography": "^3.20.0",
    "@tiptap/pm": "^3.20.0",
    "@tiptap/react": "^3.20.0",
    "@tiptap/starter-kit": "^3.20.0"
  }
}
